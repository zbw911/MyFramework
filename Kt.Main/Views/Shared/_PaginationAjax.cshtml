@model Kt.Framework.Models.Pagination
@*<link href=@Url.Content("~/Content/top.css") rel="stylesheet" type="text/css" />*@
@*分页页面模板*@
<div class="fy">
@if (Model.TotalPages > 1)
{  

    <ul class="fy_list">
     
        @if (Model.CurrentPage != 1)
        { 
             <li><a onclick="javascript:@(string.Format(Model.JavascriptFun, 1))" href="#">首页</a></li>
            <li class="previous"><a onclick="javascript:@(string.Format(Model.JavascriptFun, Model.CurrentPage - 1))" href="#">&#171; 上一页 </a></li>
        }
        <li class="@(Model.CurrentPage == 1 ? "fy_current" : "")"><a  onclick="javascript:@(string.Format(Model.JavascriptFun, 1));" href="#">
            1 </a></li>
        @if (Model.Shorten && Model.CurrentPage > 5)
        {       
            <li><a  onclick="javascript:@(string.Format(Model.JavascriptFun, Model.CurrentPage - 3));" href="#">...</a></li>
        }
        @for (int i = Model.Start; i <= Model.Stop; i++)
        { 
            <li class="@(Model.CurrentPage == i ? "fy_current" : "")"><a onclick="javascript:@(string.Format(Model.JavascriptFun, i.ToString()));" href="#">@(i.ToString())</a>
            </li>
        }
        @if (Model.Shorten && Model.CurrentPage <= (Model.TotalPages - 5))
        { 
            <li><a onclick="javascript:@(string.Format(Model.JavascriptFun, Model.CurrentPage + 3));" href="#">...</a></li>
        }
        <li class="@(Model.CurrentPage == Model.TotalPages ? "fy_current" : "")"><a  onclick="javascript:@(string.Format(Model.JavascriptFun, Model.TotalPages));" href="#">@(Model.TotalPages)</a>
        </li>
        @if (Model.CurrentPage != Model.TotalPages)
        { 
            <li class="next"><a onclick="javascript:@(string.Format(Model.JavascriptFun, Model.CurrentPage + 1))" href="#">
                下一页 &#187; </a></li>
            <li><a onclick="javascript:@(string.Format(Model.JavascriptFun, Model.TotalPages))" href="#">尾页</a></li>
        }
       
     </ul>
}
</div>