    <script language="javascript" type="text/javascript">
        $(function () {
            $("#username").focus(function () { if ($(".lg_def").html() == "邮箱/手机号") $(".lg_def").html(""); }).blur(function () { if (this.value.length == 0) $(".lg_def").html("邮箱/手机号"); });
            if ($("#username").val().length > 0)
            $("#username").focus();
            //$("#password").focus(function () { $(this).css("background", "#CBFE9F"); }).blur(function () { $(this).css("background", "#FFF"); });
            var url = "@System.Configuration.ConfigurationSettings.AppSettings["ApiCenter"].ToString()"+"?from=youxishuo&to=";
            $("#a01").attr("href", "@System.Configuration.ConfigurationSettings.AppSettings["QQApiCenter"].ToString()"+"?from=youxishuo&to=qzone");
            $("#a02").attr("href", url+"sina");
            //$("#a03").attr("href", url+"kaixin");            
            $("#a04").attr("href", url+"taobao");
            $("#cbLogin").attr("checked",false);
            $("#spanLogin").css("display","none");
        });

        function checkingbox()
        {
            if($("#cbLogin").attr("checked")==true)
            {
                $("#spanLogin").css("display","inline");
            }
            else
            {            
                $("#spanLogin").css("display","none");
            }
        }

        function checkLogInfo(obj1, obj2) {
            var obj1 = $("#" + obj1).val();
            var obj2 = $("#" + obj2).val();
            var Message = "";
            var flag = false;
            if (!!obj1 == false) { Message = "用户名不能为空 "; }
            if (!!obj2 == false) { Message = Message + "密码不能为空"; }
            if (!!Message == true) {
                //alert(Message);
                $("#errWarnDiv").show();
                $("#errMsgSpan").text(Message);
                return false;
            }
            $.ajax({ url: "/Account/AjaxValideLogInfo/" + new Date().getTime(),
                type: "POST",
                dataType: "text",
                data: "obj1=" + encodeURIComponent(obj1) + "&obj2=" + encodeURIComponent(obj2),
                async: false,
                timeout: 10000,
                success: function (data) {
                    if (!!data == true) {
                        $("#errWarnDiv").show();
                        $("#errMsgSpan").text(data);
                        flag = false;
                    } else {
                        flag = true;
                    }
                }
            });
            return flag;
        }
        //对某一个文本框的默认文字trigger实现
        $.fn.triggerText = function (text) {
            $(this).val(text);
            $(this).focus(function () {
                if ($(this).val() == text) $(this).val('');
            });
            $(this).blur(function () {
                if ($(this).val() == '') $(this).val(text);
            });
        };
        //$("#username").triggerText('邮箱/手机号');
        $(".lg_def").html("邮箱/手机号");

        function checkUserRight() {
            //进行ajax调用，获得团卡用户状态，如果是禁用，则在此提示
            //string username, string password, string rember
            var username = $("#username").val();
            var password = $("#password").val();
            var rember = "";
            $.post('/RegNav/PageLogOn/', { username: username, password: password, rember: rember }, function (data) {                            
                if(data=="用户名不能为空")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("用户名不能为空");
                }
                else if(data=="密码不能为空")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("密码不能为空");
                }
                else if(data=="用户名不存在")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("用户名不存在");
                }
                else if(data=="用户名不存在")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("用户名不存在");
                }
                else if(data=="用户不存在或者被删除")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("用户不存在或者被删除");
                }
                else if(data=="登录密码错误")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("登录密码错误");
                }
                else if(data=="您已经被禁用了请过段时间再登录")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("您已经被禁用了请过段时间再登录");
                }
                else if(data=="系统错误未设置有效UC请稍候再试")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("系统错误未设置有效UC请稍候再试");
                }
                else if(data=="您没有设置UC邮箱请重新注册")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("您没有设置UC邮箱请重新注册");
                    window.location.href = '/RegNav/RegistByEmail';
                }
                else if(data=="您需要需要激活该帐号")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("您需要需要激活该帐号");                    
                    window.location.href = '/RegNav/ActivateAccount';
                }
                else if(data=="您已被禁用请联系客服人员")
                {
                    $("#errWarnDiv").show();
                    $("#errMsgSpan").text("您已被禁用请联系客服人员");
                }
                else if (data.toLowerCase() == "nopower") {
                    $("#username").val('');
                    $("#password").val('');
                    //alert("您的账号未开通，请点击页面上的客服qq或在线客服联系开通。");
                    //$.post('/Account/Tips/');
                    window.location.href = '/RegNav/Tips';
                }
                else if(data.toLowerCase()=="success")
                {
                    $("#LoginUser").submit();
                }
                else {                
                    $("#LoginUser").submit();
                }
            });
        }

        document.onkeydown = function (e) {
            if (!e) e = window.event; //火狐中是 window.event
            if ((e.keyCode || e.which) == 13)
                checkUserRight();
        }
    </script>
